{
  "name": "sudoku-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "A Next.js and React Native Sudoku app with shared core logic",
  "scripts": {
    "dev": "next dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:watch": "pnpm --filter @sudoku/core test:watch",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit && pnpm --filter @sudoku/core exec tsc --noEmit",
    "validate": "pnpm run format:check && pnpm run type-check && pnpm run test && pnpm run build",
    "validate:all": "pnpm run format:check && pnpm run lint && pnpm run type-check && pnpm run test && pnpm run build"
  },
  "keywords": [
    "sudoku",
    "nextjs",
    "react-native",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.555.0",
    "next": "^16.0.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@types/react": "^19.2.7",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.5",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3"
  }
}

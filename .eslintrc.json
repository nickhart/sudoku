{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    // LEARNING NOTE: These rules help you write better code
    // Customize based on your preferences

    // Enforce consistent code style
    "prefer-const": "error",
    "no-var": "error",

    // Catch common mistakes
    "no-console": "warn",
    "no-debugger": "warn",

    // TypeScript-specific
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn"
  }
}
